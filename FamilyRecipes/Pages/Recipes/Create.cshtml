@page
@model FamilyRecipes.Pages.Recipes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recipe.Name" class="control-label"></label>
                <input asp-for="Recipe.Name" class="form-control" />
                <span asp-validation-for="Recipe.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Type" class="control-label"></label>
                <input asp-for="Recipe.Type" class="form-control" />
                <span asp-validation-for="Recipe.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.CreatedBy" class="control-label"></label>
                <input asp-for="Recipe.CreatedBy" class="form-control" />
                <span asp-validation-for="Recipe.CreatedBy" class="text-danger"></span>
            </div>

            <fieldset>
                <legend>Ingredients</legend>
                <table id="ingredientTable" class="table">
                    <thead>
                        <tr>
                            <td>Ingredient</td>
                            <td>Quantity</td>
                            <td>Units</td>
                            <td></td>
                        </tr>
                    </thead>

                    <tr id="tablerow0">
                        <td>
                            <div class="editor-field">
                                <input class="form-control form-control-sm" name="ingredientName[0]" type="text" value="" required="required" />
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                <input class="form-control form-control-sm" name="quantity[0]" type="text" value="" required="required" />
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                <input class="form-control form-control-sm" name="unit[0]" type="text" value="" required="required" />
                            </div>
                        </td>

                    </tr>

                </table>
                <button id="addButton" type="submit" class="btn btn-default btn-sm pull-right">New Ingredient</button>

                <br />
                <hr />

                <div class="form-group">
                    <input type="submit" value="Submit Recipe" class="btn btn-primary pull-right" />
                </div>
            </fieldset>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/bundles/jqueryval"></script>
    <script type="text/javascript">
        var counter = 1;
        $(function () {

            $('#addButton').click(function () {
                $('<tr id="tablerow' + counter + '"><td>' +
                    '<input class="form-control form-control-sm" name="IngredientName[' + counter + ']" type="text" value="" required="required" />' +
                    '</td>' +
                    '<td>' +
                    '<input type="text" class="form-control form-control-sm" name="Quantity[' + counter + ']" value="" required="required" />' +
                    '</td>' +
                    '<td>' +
                    '<input type="text" class="form-control form-control-sm" name="Unit[' + counter + ']" value="" required="required" />' +
                    '</td>' +
                    '</tr>').appendTo('#ingredientTable');
                counter++;
                return false;
            });
        });

    </script>
}
