@page "{id:int?}"
@model FamilyRecipes.Pages.Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<h2>@Html.DisplayFor(model => model.Recipe.Name)</h2>
<div class="row">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.Type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.Type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.CreatedDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.CreatedDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.CreatedBy)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.CreatedBy)
        </dd>
    </dl>
    <div class="col-md-6">
        <table class="table table-fit">
            <thead>
                <tr>
                    <th>
                        Ingredients
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Ingredients)
            {
                <tr>
                    <td>
                        @{
                        var fullIngredient = item.Quantity + " " + item.Unit + " " + item.Name;
                        @Html.DisplayFor(m => fullIngredient)
                        }
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.RecipeID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
