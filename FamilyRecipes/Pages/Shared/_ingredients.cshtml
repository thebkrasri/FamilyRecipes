<!-- _CustomerList.cshtml -->
@using FamilyRecipes.Models
@model List<Ingredient>


        <div class="row align-items-center">
            <div class="col">
                <h4>
                    Ingredients
                </h4>
            </div>
        </div>

    <div class="row">
        <div class="col-md-6">
            <table id="ingredientTable" class="table">
                <thead class="thead-light">
                    <tr>
                        <th>
                            Ingredient
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Unit
                        </th>
                    </tr>
                </thead>
                @if (Model.Count == 0)
    {
            <tr></tr>
}
else
{
            @for (var i = 0; i < Model.Count; i++)
{

            <tr>
                <td>
                    @Html.EditorFor(Model => Model[i].Name,
new { htmlAttributes = new { @class = "form-control form-control-sm valid" } })
                </td>
                <td>
                    @Html.EditorFor(model => model[i].Quantity,
new { htmlAttributes = new { @class = "form-control form-control-sm valid" } })
                </td>
                <td>
                    @Html.EditorFor(model => model[i].Unit,
new { htmlAttributes = new { @class = "form-control form-control-sm valid" } })
                <td>
                    <a asp-page="./Edit"
                       asp-page-handler="Delete" asp-route-id="Ingredients[i].IngredientID" class="btn btn-link">Delete</a>
                </td>
                <td>
                    @Html.HiddenFor(model => model[i].IngredientID)
                </td>

            </tr>
}
}

            </table>
            <button id="addButton" type="submit" class="btn btn-default pull-right">New Ingredient</button>
        </div>
        </div>
        